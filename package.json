{
  "name": "react-md-renderer",
  "description": "Simple batteries included rendering library for markdown files.",
  "version": "0.0.2-alpha.2",
  "author": "Andrew Moss",
  "license": "MIT",
  "sideEffects": false,
  "repository": "agmoss/react-md-renderer",
  "keywords": [
    "react",
    "mui",
    "render"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "lint": "tsdx lint",
    "test": "echo \"No test specified\"",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "es5"
  },
  "module": "dist/react-md-renderer.esm.js",
  "size-limit": [
    {
      "path": "dist/react-md-renderer.cjs.production.min.js",
      "limit": "5 KB"
    },
    {
      "path": "dist/react-md-renderer.esm.js",
      "limit": "5 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@size-limit/webpack": "^7.0.8",
    "@size-limit/webpack-why": "^7.0.8",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-syntax-highlighter": "^13.5.2",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/material": "^5.6.1",
    "markdown-to-jsx": "^7.1.7",
    "react-syntax-highlighter": "^15.5.0"
  }
}
